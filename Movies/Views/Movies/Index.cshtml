@model IEnumerable<Movies.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table id="MovieTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PeopleWorkingOnMovie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenresInMovie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="@item.IMDBLink" target="_blank">@item.Name</a>
                </td>
                <td>
                    <img src="@item.Picture" style="width:100px; height:150px"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PeopleWorkingOnMovie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GenresInMovie)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MovieID }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.MovieID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
</p>

@section scripts{
    <script>
        $(document).ready(function () {
            $("#MovieTable").DataTable();
        });
    </script>
}