@model IEnumerable<Movies.Models.Genre>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table id="GenreTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.GenreID }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.GenreID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
</p>

@section scripts{
    <script>
        $(document).ready(function () {
            $("#GenreTable").DataTable();
        });
    </script>
}